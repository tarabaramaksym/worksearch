{
	"user_job_id": {
		"type": "INTEGER",
		"primary_key": true,
		"auto_increment": true,
		"nullable": false
	},
	"user_id": {
		"type": "INTEGER",
		"nullable": false,
		"foreign_key": {
			"references": "users.user_id",
			"on_delete": "CASCADE",
			"on_update": "CASCADE"
		}
	},
	"job_id": {
		"type": "INTEGER",
		"nullable": false,
		"foreign_key": {
			"references": "jobs.entity_id",
			"on_delete": "CASCADE",
			"on_update": "CASCADE"
		}
	},
	"status": {
		"type": "ENUM('saved', 'applied', 'withdrawn', 'phone_screen', 'interview_scheduled', 'second_round', 'final_round', 'technical_test', 'offer_received', 'hired', 'rejected')",
		"nullable": false,
		"default": "saved"
	},
	"notes": {
		"type": "TEXT",
		"nullable": true,
		"default": null,
		"charset": "utf8mb4",
		"collation": "utf8mb4_unicode_ci"
	},
	"created_at": {
		"type": "TIMESTAMP",
		"nullable": false,
		"default": "CURRENT_TIMESTAMP"
	},
	"updated_at": {
		"type": "TIMESTAMP",
		"nullable": true,
		"default": "CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP"
	},
	"indexes": {
		"unique_user_job": {
			"type": "UNIQUE",
			"columns": [
				"user_id",
				"job_id"
			]
		},
		"idx_user_id": {
			"type": "INDEX",
			"columns": [
				"user_id"
			]
		},
		"idx_job_id": {
			"type": "INDEX",
			"columns": [
				"job_id"
			]
		}
	}
}